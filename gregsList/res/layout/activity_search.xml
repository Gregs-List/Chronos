 <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"> 
       <LinearLayout 
            android:layout_height = "wrap_content"
            android:layout_width = "wrap_content"
            android:orientation="vertical">
            
        <LinearLayout
        android:layout_height = "wrap_content" 
        android:layout_width = "wrap_content"
        android:orientation = "horizontal"
        android:id = "@+id/navbar">
    <Button 
        android:id="@+id/home"
        android:layout_height = "35dp"
        android:layout_width = "112dp"
        android:text = "@string/nav1"
        android:textSize = "12dp"
        android:layout_marginRight="-9dp"/>
    
     <Button 
        android:id="@+id/account"
        android:layout_height = "35dp"
        android:layout_width = "114dp"
        android:text = "@string/nav2"
        android:textSize = "12dp"
        android:layout_marginRight="-9dp"/>
     
      <Button 
        android:id= "@+id/logout"
        android:layout_height = "35dp"
        android:layout_width = "112dp"
        android:text = "@string/nav3"
        android:textSize = "12dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width = "310dp"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        android:layout_gravity = "center"
        android:background = "@drawable/outline">
      
        <TextView
            android:layout_height = "wrap_content"
            android:layout_width = "wrap_content"
            android:text = "Filter by category"
            android:layout_gravity = "center"
            android:textStyle = "bold"
            android:textColor = "#10294f"/>
        
        <LinearLayout
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            
             <Button 
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/all"
                android:id="@+id/all"
                android:textSize="10sp"/>
             
            <Button 
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/bikes"
                android:id="@+id/bikes"
                android:textSize="10sp"/>
            <Button 
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/books"
                android:id="@+id/books"
                android:textSize="10sp"/>
              <Button 
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/electronics"
                android:id="@+id/electronics"
                android:textSize="10sp"/>
              
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content" 
            android:layout_height = "wrap_content"
            android:orientation = "horizontal"
			android:layout_gravity="center">
              
            <Button 
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/furniture"
                android:id="@+id/furniture"
                android:textSize="10sp"/>
              
              <Button 
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/meetups"
                android:id="@+id/meetups"
                android:textSize="10sp"/>
              
              <Button 
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/rides"
                android:id="@+id/rides"
                android:textSize="10sp"/>
              
              <Button 
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/misc"
                android:id="@+id/misc"
                android:textSize="10sp"/>
            
            
        </LinearLayout>
            </LinearLayout>
                        <LinearLayout 
        android:layout_width="310dp" 
        android:layout_height="wrap_content"
        android:background="@drawable/outline"
        android:layout_gravity="center"
        android:orientation="horizontal">
          <TextView
          android:id = "@+id/search_heading"
          android:layout_height = "wrap_content"
          android:layout_width = "wrap_content"
          android:text="@string/search_heading"
          android:textStyle="bold"
          android:textColor= "#10294f"
          android:paddingRight="10dp"
          />
          <EditText
              android:layout_height = "wrap_content"
              android:layout_width = "wrap_content"
              android:hint="Search"
              android:textSize="13dp"
              android:inputType="textNoSuggestions"
              android:id="@+id/search_text"
              />

          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/search" 
              android:layout_gravity="center_vertical"
              android:id="@+id/search"/>

               </LinearLayout>
            <LinearLayout 
                android:layout_width = "310dp" 
                android:layout_height = "wrap_content" 
                 android:background="@drawable/outline"
                android:layout_gravity="center"
                android:orientation="vertical">
          
        <LinearLayout
               android:layout_width = "310dp"
               android:layout_height = "wrap_content"
               android:orientation="horizontal">
          <TextView 
              android:layout_width = "wrap_content"
              android:layout_height = "wrap_content"
              android:text="@string/title"
              android:paddingLeft="6dp"
              android:paddingRight = "150dp"
              android:textStyle="bold"
              android:textColor= "#10294f"/>
          
          <TextView 
              android:layout_width = "wrap_content"
              android:layout_height = "wrap_content"
              android:text="@string/category"
              android:textStyle="bold"
              android:textColor= "#10294f"/>

          </LinearLayout>
              <ListView
          			android:id="@+id/listview2"
          			android:layout_width="wrap_content"
          			android:layout_height="wrap_content">
          		</ListView>
            </LinearLayout>

    </LinearLayout>
    </FrameLayout>