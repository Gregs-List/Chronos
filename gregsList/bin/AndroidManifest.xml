<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gregslist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.gregslist.HomePage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gregslist.LoginActivity"
            android:label="@string/login_button" >
        </activity>
        <activity
            android:name="com.example.gregslist.SignUp"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.example.gregslist.UserHome"
            android:label="@string/title_activity_user_home" >
        </activity>
        <activity
            android:name="com.example.gregslist.AccountActivity"
            android:label="@string/title_activity_account" >
        </activity>
        <activity
            android:name="com.example.gregslist.ListingActivity"
            android:label="@string/title_activity_listing" >
        </activity>
        <activity
            android:name="com.example.gregslist.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>
